---

<section class="flex flex-col gap-20 bg-slate-800 py-24">
    <ContainerSmall>
        <div class="flex flex-col gap-20">
            <div class="flex flex-col gap-10">
                <Paragraph3XlWhite>{ data.description }</Paragraph3XlWhite>
                <div class="flex gap-8 justify-between items-center">
                    <Paragraph5XlWhite>{ data.b }</Paragraph5XlWhite>
                    <div class="w-full aspect-[20/1]">
                        <PictureContain
                            alternative_text=""
                            source={ data.arrow_source }
                        />                                                            
                    </div>
                    <Paragraph5XlWhite>{ data.b }</Paragraph5XlWhite>
                </div>
            </div>
            <div class="flex flex-col gap-2">
                <Paragraph3XlGray>{ data.bottom_title }</Paragraph3XlGray>
                <div class="flex flex-col justify-between md:flex-row items-center gap-8">
                    <Accordion 
                        client:load
                        links={ links }
                        title="Launching a new product or service" 
                    />
                    <Link href={ data.button_link }>
                        <ButtonTransparent>{ data.button_text }</ButtonTransparent>
                    </Link>
                </div>
            </div>
        </div>   
    </ContainerSmall>
    <div class="px-4">
        <div class="hidden lg:flex flex-col gap-4">
            <div class="grid grid-cols-4 gap-4">
                {

                    card_data_first_half.map( ( data, index ) => (

                        <div class={ index === 1 ? "col-span-2 row-span-2" : "" }>
                            <WorkCard
                                link={ data.link }
                                source={ data.source }
                                title={ data.title }
                            />
                        </div>
                        
                    ))
        
                }
            </div>
            <div class="grid grid-cols-3 gap-4">
                {

                    card_data_second_half.map( ( data ) => (

                        <WorkCard
                            link={ data.link }
                            source={ data.source }
                            title={ data.title }
                        />
                        
                    ))
        
                }
            </div>
        </div>
        <div class="lg:hidden grid grid-cols-2 gap-4">
            {

                card_data.map( ( data ) => (

                    <WorkCard
                        link={ data.link }
                        source={ data.source }
                        title={ data.title }
                    />
                    
                ))
    
            }
        </div>
    </div>
</section>
